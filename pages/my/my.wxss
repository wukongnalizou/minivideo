.mytop{
  position: relative;
  width: 750rpx;
  height: 283rpx;
  overflow: hidden;
  text-align: center;
}
.mybackimg{
  position: absolute;
  z-index: -1;
  width: 750rpx;
  height: 283rpx;
}
.mybackimg image{
  width: 100%;
  height: 100%;
}
.myimgbox{
  position: absolute;
  top: 55rpx;
  left: 313rpx;
  width: 124rpx;
  height: 124rpx;
  background: #f0f0f0;
  border-radius: 50%;
}
.myimg{
  width: 113rpx;
  height: 113rpx;
  margin: 0 auto;
  transform: translateY(6rpx);
  border-radius: 50%;
}
.myimg image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.myname{
  margin-top: 202rpx;
  font-size:28rpx;
  font-weight: 700; 
}
.mynavitem{
  width: 710rpx;
  height: 100rpx;
  margin: 0 auto;
  line-height: 100rpx;
}
.mynavitem::after{
  content: '';
  clear: both;
  display: block;
  width: 710rpx;
  height: 1rpx;
  background: #f0f0f0;
}
.navimg{
  float: left;
  width:32rpx;
  height: 32rpx; 
}
.navimg image{
  width: 100%;
  height: 100%;
}
.navtitle{
  float: left;
  margin-left: 10rpx;
  font-size: 28rpx;
}
.arrow{
  float: right;
  width: 24rpx;
  height: 24rpx;
}
.arrow image{
  width: 100%;
  height: 100%;
}
.historybox{
  height: auto;
}
.historyitem{
  width: 100%;
  height: 100%;
}
.videolist{
  text-align: center;
}
.videoitem{
  display: inline-block;
  width: 33%;
  font-size: 0;
}
.videoimg{
  width: 189rpx;
  height: 115rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}
.videoimg image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.videoname{
  width: 189rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  margin-top: -15rpx;
  margin-bottom: -15rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}