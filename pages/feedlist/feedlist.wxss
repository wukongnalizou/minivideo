.feedlistbox{
  position: absolute;
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}
.feedlist{

}
.feeditem{
  position: relative;
  overflow: hidden;
  margin-top: 40rpx;
}
.feedimg{
  float: left;
  margin-left: 20rpx;
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}
.feedimg image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.feedcon{
  position: relative;
  /* display: inline-block; */
  float: left;
  max-width: 500rpx;
  background: #fff;
  margin-left: 20rpx;
  padding: 20rpx 30rpx;
  text-align: left;
  word-break: break-all;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 1.5;
}
.feedcon::before{
  content: '';
  position: absolute;
  top: 40rpx;
  right: 100%;
  border:10rpx solid transparent;
  border-right-color: #fff;
}
.self{
  text-align: right;
}
.self .feedimg{
  float: right;
  margin-right: 20rpx;
}
.self .feedcon{
  float: right;
}
.self .feedcon::before{
  border: none;
}
.self .feedcon::after{
  content: '';
  position: absolute;
  top: 40rpx;
  border:10rpx solid transparent;
  /* border-right-color: #fff; */
  border-right-color: transparent;
  border-left-color: #fff;
  left: 100%;
}
.tofeedback{
  position: fixed;
  top: 713rpx;
  right: 39rpx;
  width: 114rpx;
  height: 114rpx;
  line-height: 114rpx;
  text-align: center;
  font-size: 48rpx;
  color: #fff;
  text-shadow: 5rpx 5rpx 5rpx #FE9E08;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 10rpx rgba(197,84,8,0.67);
  background: #ffd600;  
}