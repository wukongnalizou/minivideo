.changetop{
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 283rpx;
  background:-webkit-linear-gradient(left,#C69240, #EDD26E); 
  text-align: center;
}
.changename{
  margin-top: 93rpx;
  font-size: 26rpx;
  font-weight: 700;
}
.changenum{
  margin-top: 5rpx;
  font-size: 73rpx;
  font-weight: 700;
}
.changedetail{
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
}
.changedetail::after{
  content: '';
  display: block;
  width: 710rpx;
  height: 1rpx;
  background: #f0f0f0;
  margin: 0 auto;
}
.changeimg{
  margin-left: 31rpx;
  display: inline-block;
  width: 59rpx;
  height: 37rpx;
}
.changeimg image{
  width: 100%;
  height: 100%;
}
.changetitle{
  margin-left: 10rpx;
  display: inline-block;
  font-size: 36rpx;
  font-weight: 700;
}
.changeitem{
  position: relative;
  width: 710rpx;
  height: 100rpx;
  margin: 0 auto;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.ctitle{
  display: inline-block;
  font-size:28rpx; 
}
.cchange{
  float: right;
  transform: translateY(24rpx);
  width: 109rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 26rpx;
  background:-webkit-linear-gradient(left,#C69240, #EDD26E); 
  font-size:24rpx;
  font-weight: 700;  
}