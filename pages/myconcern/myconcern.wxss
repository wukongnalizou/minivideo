.concernitem{
  position: relative;
  width: 710rpx;
  height: 168rpx;
  /* border-bottom: 1rpx solid #e8e8e8; */
  margin: 0 auto;
  margin-top: 20rpx;
}
.concernitem::after{
  content: '';
  display: block;
  width: 750rpx;
  height: 15rpx;
  margin-top: 20rpx;
  margin-left: -20rpx;
  background: #f0f0f0;
}
.concerndetail{
  margin-left: 31rpx;
}
.concernimg{
  display: inline-block;
  width: 128rpx;
  height: 128rpx;
  transform: translateY(20rpx);
  border-radius: 50%;
}
.concernimg image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.concerndetail{
  display: inline-block;
}
.concerntitle{
  font-size: 28rpx;
  font-weight: 700;
}
.concernintro{
  font-size: 22rpx;
  color: #999;
}
.accountbox{
  display: inline-block;
  font-size: 0;
  margin-bottom: 21rpx;
}
.accountbox:last-child{
  margin-left: 36rpx;
}
.accountname{
  display: inline-block;
  font-size: 22rpx;
  color: #999;
}
.accountnum{
  display: inline-block;
  margin-left: 10rpx;
  font-size: 22rpx;
}
.concernperson{
  position: absolute;
  display: inline-block;
  width: 109rpx;
  height: 52rpx;
  top: 59rpx;
  right: 20rpx;
  line-height: 52rpx;
  border:1rpx solid #ffd600;
  border-radius: 26rpx;
  /* background: #ffd600; */
  color: #ffd600;
  font-weight: 700;
  font-size: 24rpx;
  text-align: center;
}
.nodatatitle{
  margin-top: 400rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}
.nodataimg{
  width: 354rpx;
  height: 354rpx;
  margin: 0 auto;
}
.nodataimg image{
  width: 100%;
  height: 100%;
}
.toconcern{
  /* display: inline-block; */
  width: 341rpx;
  height: 79rpx;
  margin: 0 auto;
  margin-top: 70rpx;
  border-radius: 40rpx;
  line-height: 79rpx;
  text-align: center;
  background: #ffd600;
  font-size: 30rpx;
  font-weight: 700;
}